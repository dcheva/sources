<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                aria-hidden="true"><span class="glyphicon glyphicon-remove"></span></span></button>
        <h4 class="modal-title" id="modalLabel">Registration form</h4>
    </div>
    <form role="form" method="post" action="{{ url('user:register') }}">
        <div class="modal-body form-group">
            {% if register_form %}
                {{ register_form.as_bs() }}
            {% else %}
                {{ local_vars['user_registration_form'].as_bs() }}
            {% endif %}
        </div>
        <div class="modal-footer">
            <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
            <button type="submit" class="btn btn-primary btn-save-modal-form">Save changes</button>
        </div>
    </form>
</div>
